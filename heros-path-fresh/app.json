{
  "expo": {
    "name": "heros-path-fresh",
    "slug": "heros-path-fresh",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "scheme": "com.liamclarke.herospath",
    "owner": "liamclarke-dev",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E1E1E"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.liamclarke.herospath",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "Hero's Path uses your location to show your current position on the map and discover nearby places during your adventures.",
        "NSLocationAlwaysUsageDescription": "Hero's Path needs continuous location access to accurately track your complete walking journey, even when your screen is locked or you switch to other apps. This ensures your adventure route is properly recorded.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Hero's Path uses your location to track your walking adventures and discover nearby places. Continuous access ensures complete route tracking even when the app is in the background.",
        "UIBackgroundModes": [
          "location",
          "background-processing",
          "background-fetch"
        ],
        "BGTaskSchedulerPermittedIdentifiers": [
          "com.liamclarke.herospath.background-location-sync"
        ]
      },
      "config": {
        "googleMapsApiKey": "${GOOGLE_MAPS_API_KEY_IOS}"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.liamclarke.herospath",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "4177e7e0-0896-45ea-9095-1c3da2e8a1a3"
      }
    },
    "plugins": [
      "expo-maps"
    ]
  }
}
